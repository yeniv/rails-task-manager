<%= form_for(task) do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>

  <br><br>

  <%= f.label :Details %>
  <%= f.text_field :details %>

  <br><br>

  <% unless task.new_record? %>
    <%= f.label :Mark_as_complete? %>
    <%= f.check_box :completed %>
  <% end %>

  <br><br>

  <%= f.submit %>

<% end %>
